@{
    ViewData["Title"] = "Anasayfa";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pratik Market - Anasayfa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero {
            background: url('/img/kapak2.jpg') no-repeat center center;
            background-size: cover;
            padding: 100px 0;
            color: #fff;
            text-align: center;
        }

            .hero h1 {
                font-size: 3rem;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 1.5rem;
                margin-bottom: 20px;
            }

        .categories, .featured-products {
            margin: 40px 0;
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="hero">
        <div class="container">
            <h1>Hoşgeldiniz Pratik Market</h1>
            <p>Kaliteli ve taze ürünlerle dolu bir alışveriş deneyimi sizi bekliyor.</p>
            <a href="/Product/ProductMarketing" class="btn btn-primary">Alışverişe Başla</a>
        </div>
    </div>

    <div class="container">
        <div class="categories">
            <h2>Ürün Kategorileri</h2>
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/sebze.jpg" class="card-img-top" alt="Sebze">
                        <div class="card-body">
                            <h5 class="card-title">Sebzeler</h5>
                            <a href="/Product/ProductMarketing" class="btn btn-primary">İncele</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/meyve.jpg" class="card-img-top" alt="Meyve">
                        <div class="card-body">
                            <h5 class="card-title">Meyveler</h5>
                            <a href="/Product/ProductMarketing" class="btn btn-primary">İncele</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/et.jpeg" class="card-img-top" alt="Et ve Tavuk">
                        <div class="card-body">
                            <h5 class="card-title">Et ve Tavuk</h5>
                            <a href="/Product/ProductMarketing" class="btn btn-primary">İncele</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/süt.jpg" class="card-img-top" alt="Süt Ürünleri">
                        <div class="card-body">
                            <h5 class="card-title">Süt Ürünleri</h5>
                            <a href="/Product/ProductMarketing" class="btn btn-primary">İncele</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="featured-products">
            <h2>Öne Çıkan Ürünler</h2>
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/karpuz.jpg" class="card-img-top" alt="Karpuz">
                        <div class="card-body">
                            <h5 class="card-title">Karpuz</h5>
                            <p class="card-text">₺13.99</p>
                            <a href="#" class="btn btn-success">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/kavun.jpg" class="card-img-top" alt="Kavun">
                        <div class="card-body">
                            <h5 class="card-title">Kavun</h5>
                            <p class="card-text">₺14.99</p>
                            <a href="#" class="btn btn-success">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/peynir.jpg" class="card-img-top" alt="Beyaz Peynir">
                        <div class="card-body">
                            <h5 class="card-title">Beyaz Peynir</h5>
                            <p class="card-text">₺39.99</p>
                            <a href="#" class="btn btn-success">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="/img/et2.jpg" class="card-img-top" alt="Bonfile">
                        <div class="card-body">
                            <h5 class="card-title">Bonfile</h5>
                            <p class="card-text">₺49.99</p>
                            <a href="#" class="btn btn-success">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
